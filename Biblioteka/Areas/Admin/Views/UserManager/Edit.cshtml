@model RoleManagmentViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-white ml-0 py-3">
        <div class="row">
            <div class="coll-12 text-center">
                <h2 class=" py-2">Edytuj użytkownika</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row bg-light" enctype="multipart/form-data">
            <input asp-for="ApplicationUser.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="ApplicationUser.UserName" readonly class="form-control border-0 shadow" />
                            <label asp-for="ApplicationUser.UserName" class="ms-2"></label>
                            <span asp-validation-for="ApplicationUser.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select border-0 shadow">
                            <option disabled selected>-Wybierz Role-</option>
                        </select>
                        <label asp-for="ApplicationUser.Role" class="ms-2"></label>
                    </div>                      
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Zapisz</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="UserManager" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Cofnij
                                </a>
                            </div>
                        </div>
                    </div>
                </div>               
            </div>

        </form>
    </div>
</div>
