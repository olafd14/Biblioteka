@model Book

@{
    ApplicationUser currentUser = ViewData["CurrentUser"] as ApplicationUser;
    Book book = ViewData["Book"] as Book;

    bool isBookAvailable = book.isAvailable; // Assuming isAvailable indicates the availability of the book
    bool isUserBorrowedBook = currentUser != null && currentUser.BookId == book.Id && currentUser.HasBorrowedBook; // Checking if the current user has borrowed the book
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-1">
                <a asp-controller="Home" asp-action="Index" class="btn btn-transparent"><i class="bi bi-arrow-left-circle text-white" style="font-size: 30px;"></i></a>
            </div>
            <div class="col-11 text-center">
                <h2 class="text-white py-2"><strong>@Model.Title - @Model.Author</strong></h2>
            </div>
        </div>
    </div>
    <table>
        <tbody>
            <div class="card-body p-4">
                <div class="row mb-2 shadow" style="background-color: #f2f2f2; border: 1px solid #ccc; border-radius: 8px; padding: 2px; margin-top: 5px;">
                    <div class="col-md-4">
                        <div style="width: 400px; height: 600px; border: 1px solid #ccc; border-radius: 8px; overflow: hidden;">
                            <img src="@Model.ImageUrl" style="width: 100%; height: 100%; object-fit: cover;" />
                        </div>
                    </div>
                    <div class="col-md-8" style=" border: 1px solid #ccc; border-radius: 8px; padding: 5px; margin-top: 5px; overflow: hidden; text-overflow: ellipsis;">
                        <div class="row mb-2">
                            <div class="col-md-12 mb-2">
                                <strong style="font-size: 35px; margin-left: 20px;">Tytuł: @Model.Title</strong>
                            </div>
                            <div class="col-md-12 mb-2" style="color:black">
                                <strong style="font-size: 35px; margin-left: 20px;">Autor: @Model.Author</strong>
                            </div>
                            <div class="col-md-12 mb-2">
                                <strong style="font-size: 35px; margin-left: 20px;">Kategoria: @Model.Category.Name</strong>
                            </div>
                            <div class="col-md-12 mb-2" style="color:black; text-shadow: 1px 1px 2px rgba(0,0,0,0.5);">
                                <strong style="font-size: 35px; margin-left: 20px;">Ocena: @(Model.UserRating.ToString("0.0")) /10 <i class="bi bi-star-fill"></i></strong>
                            </div>
                            <div class="col-md-12 mb-2">
                                <div class="mb-2" style=" border: 1px solid #ccc; border-radius: 8px; padding: 5px; margin-top: 5px; overflow: hidden; text-overflow: ellipsis; font-size: 30px;">
                                    <strong style="font-size: 35px;">Opis:</strong> @Model.Description
                                </div>
                                <div class="col-md-1">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 text-end">
                        @if (isBookAvailable && !isUserBorrowedBook)
                        {
                            <form method="post" asp-controller="Home" asp-action="Borrow" asp-route-id="@Model.Id">
                                <input type="hidden" name="userId" value="@User.Identity.Name" />
                                <button type="submit" class="btn btn-info mx-2" style="margin-top: 20px; block-size: max-content; font-size: 25px;">Wypożycz</button>
                            </form>
                        }
                        else if (isUserBorrowedBook)
                        {
                            <form method="post" asp-controller="Home" asp-action="Return" asp-route-id="@Model.Id">
                                <input type="hidden" name="userId" value="@User.Identity.Name" />
                                <button type="submit" class="btn btn-warning mx-2" style="margin-top: 20px; block-size: max-content; font-size: 25px;">Oddaj</button>
                            </form>
                        }
                        else
                        {
                            <button type="button" class="btn btn-secondary mx-2" style="margin-top: 20px; block-size: max-content; font-size: 25px;" disabled>Niedostępna</button>
                        }
                    </div>
                    <div class="col-md-12">
                        <strong style="font-size: 40px;">Opinie:</strong>
                    </div>  
                </div>
            </div>
        </tbody>
    </table>
</div>
