@page
@model RegisterModel


<div class="container mt-4 col-md-4">
    <div class="row justify-content-center align-items-center">
        <div class="card border-black">        
            <div class="row">
                <div class="col-12 text-center mt-4">
                    <h2 class="py-2">Rejestracja</h2>
                </div>
            </div>        
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">
                    <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">                        
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="ms-2 text-muted">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="ms-2 text-muted">Hasło</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Potwierdź hasło</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-4">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Zarejestruj</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
