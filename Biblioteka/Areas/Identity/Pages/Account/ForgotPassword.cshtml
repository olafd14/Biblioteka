@page
@model ForgotPasswordModel


<div class="container mt-4 col-md-5">
    <div class="card border-black">
    <div class="row justify-content-center align-items-center mt-4">
        <h2 class="mt-2 col-md-10" style="font-size: 17px; text-align: center;">Nie pamiętasz swojego hasła? Wpisz email podany podczas rejestracji na stronie, a w krótkim czasie otrzymasz wiadomość z dalszymi instrukcjami.</h2>
            <div class="row justify-content-center">
            <div class="col-md-10 mt-3">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary mt-2 mb-4">Wyślij</button>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
