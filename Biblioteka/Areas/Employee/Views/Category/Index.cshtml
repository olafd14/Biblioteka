@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header text-center py-4" style="background: linear-gradient(90deg, #3b5998, #8b9dc3); color: white; border-radius: 8px 8px 0 0;">
        <h2 class="fw-bold text-uppercase">Lista kategorii</h2>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Dodaj kategorię
                </a>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead class="bg-light text-secondary">
                <tr>
                    <th class="text-center">Nazwa kategorii</th>
                    <th class="text-center">Opis</th>
                    <th class="text-center" style="width: 200px;">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Name))
                {
                    <tr>
                        <td class="align-middle text-center">
                            @obj.Name
                        </td>
                        <td class="align-middle text-center">
                            @obj.Description
                        </td>
                        <td class="align-middle text-center">
                            <div class="d-flex justify-content-center">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-1">
                                    <i class="bi bi-pencil"></i> Edytuj
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-1 delete-btn">
                                    <i class="bi bi-trash"></i> Usuń
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Gradient dla nagłówka */
    .card-header {
        background: linear-gradient(90deg, #3b5998, #8b9dc3);
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8); /* Cień dla lepszej widoczności */
        border-radius: 8px 8px 0 0;
    }

        .card-header h2 {
            font-size: 2rem;
            font-weight: bold;
            text-transform: uppercase;
            margin: 0;
        }

    /* Styl dla tabeli */
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    /* Przyciski akcji */
    .btn-outline-primary {
        border-color: #3b5998;
        color: #3b5998;
    }

        .btn-outline-primary:hover {
            background-color: #3b5998;
            color: white;
        }

    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

    /* Ikony w przyciskach */
    .bi {
        font-size: 1rem;
        vertical-align: middle;
        margin-right: 5px;
    }

</style>
