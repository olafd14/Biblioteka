@model Book

<div class="card shadow border-0 mt-4">
    <div class="card-header text-center py-4" style="background: linear-gradient(90deg, #3b5998, #8b9dc3); color: white; border-radius: 8px 8px 0 0;">
        <h2 class="fw-bold text-uppercase">Edytuj książkę</h2>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <input asp-for="ImageUrl" hidden />
            <input asp-for="CopiesAvailable" hidden />
            <div class="row g-4">
                <!-- Lewa kolumna: Formularz -->
                <div class="col-md-8">
                    <div class="row g-3">
                        <!-- Tytuł książki -->
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Title" class="form-control shadow-sm" placeholder="Tytuł książki" />
                                <label asp-for="Title">Tytuł książki</label>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Autor -->
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Author" class="form-control shadow-sm" placeholder="Autor książki" />
                                <label asp-for="Author">Autor książki</label>
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Opis książki -->
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control shadow-sm" placeholder="Opis książki" style="height: 150px;"></textarea>
                                <label asp-for="Description">Opis książki</label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Liczba egzemplarzy -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="CopiesNumber" type="number" class="form-control shadow-sm" placeholder="Liczba egzemplarzy" min="1" />
                                <label asp-for="CopiesNumber">Liczba egzemplarzy</label>
                                <span asp-validation-for="CopiesNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Dostępność -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select asp-for="isAvailable" class="form-select shadow-sm">
                                    <option value="">Wybierz dostępność</option>
                                    <option value="true">Dostępna</option>
                                    <option value="false">Niedostępna</option>
                                </select>
                                <label asp-for="isAvailable">Dostępność</label>
                                <span asp-validation-for="isAvailable" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Kategoria -->
                        <div class="col-12">
                            <div class="form-floating">
                                <select asp-for="CategoryId" class="form-select shadow-sm" asp-items="ViewBag.CategoryId"></select>
                                <label asp-for="CategoryId">Kategoria</label>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Obraz okładki -->
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="file" name="file" class="form-control shadow-sm" />
                                <label asp-for="ImageUrl">Okładka książki</label>
                            </div>
                        </div>
                        <!-- Przyciski akcji -->
                        <div class="col-12 d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary mx-2">
                                <i class="bi bi-save"></i> Zapisz
                            </button>
                            <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cofnij
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Prawa kolumna: Podgląd okładki -->
                <div class="col-md-4 d-flex align-items-center justify-content-center">
                    <img src="@Model.ImageUrl" class="img-fluid shadow-sm" style="max-width: 100%; height: auto; object-fit: cover;" alt="Okładka książki" />
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    /* Gradient dla nagłówka */
    .card-header {
        background: linear-gradient(90deg, #3b5998, #8b9dc3);
        color: white;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
        border-radius: 8px 8px 0 0;
    }

        .card-header h2 {
            font-size: 2rem;
            font-weight: bold;
            text-transform: uppercase;
            margin: 0;
        }

    /* Styl obrazu */
    img {
        max-height: 400px; /* Wyświetl większe obrazy */
        border: none; /* Usunięcie ramki */
        object-fit: cover;
    }

    /* Form floating */
    .form-floating > label {
        color: #6c757d;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-select:focus ~ label {
        color: #3b5998;
    }

    /* Przycisk Zapisz */
    .btn-primary {
        background-color: #3b5998;
        border-color: #3b5998;
    }

        .btn-primary:hover {
            background-color: #2d4373;
            border-color: #2d4373;
        }

    /* Przycisk Cofnij */
    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #e9ecef;
            color: #3b5998;
        }
</style>
