@model List<Book>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="coll-12 text-center">
                <h2 class="text-white py-2">Book List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="text-end">
                <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                    Create New Book
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Tytuł
                    </th>
                    <th>
                        Autor
                    </th>
                    <th>
                        Opis
                    </th>                    
                    <th>
                        Dostępność
                    </th>
                    <th>
                        Kategoria
                    </th>
                    <th>
                        Ocena
                    </th>
                    <th style="width: 200px"

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Title))
                {
                    <tr>
                        <td>
                            <img src="@obj.ImageUrl" style="width: 100px; height: 100px;" />
                        </td>
                        <td>
                            @obj.Title
                        </td>
                        <td>
                            @obj.Author
                        </td>
                        <td>
                            @obj.Description
                        </td>
                        <td>
                            @obj.isAvailable
                        </td>
                        <td>
                            @obj.CategoryId
                        </td>
                        <td>
                            @obj.UserRating
                        </td>
                        <td>
                            <div class="text-end" role="group">
                                <a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 delete-btn">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


